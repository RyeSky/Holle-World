<resources>

    <!-- 程序启动页样式，避免黑屏 -->
    <style name="AppStartLoadTranslucent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 加载框样式 -->
    <style name="loading_dialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 单行白色输入框 -->
    <style name="single_white_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:layout_marginLeft">@dimen/horizontal</item>
        <item name="android:layout_marginRight">@dimen/horizontal</item>
        <item name="android:background">@drawable/shape_white</item>
        <item name="android:paddingLeft">@dimen/horizontal</item>
        <item name="android:paddingRight">@dimen/horizontal</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textColorHint">@color/text_light_gray</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:singleLine">true</item>
    </style>


    <!-- 主界面底部导航栏 -->
    <style name="foot_nav_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/selector_text_checked</item>
    </style>

    <!-- 空列表提示 -->
    <style name="empty_list_tip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/horizontal</item>
        <item name="android:layout_marginRight">@dimen/horizontal</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">@integer/max_text_line</item>
        <item name="android:textColor">@color/text_light_gray</item>
        <item name="android:textSize">@dimen/sub_text_size</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?><!--评论列表界面-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_comment_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    tools:context=".activity.pillowtalk.comment.CommentListActivity">

    <com.skye.lover.view.Topbar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height" />

    <TextView
        android:id="@+id/empty_list_tip"
        style="@style/empty_list_tip"
        android:layout_below="@id/topbar"
        android:visibility="gone" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topbar">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/no_color"
            android:divider="@drawable/layer_split_line"
            android:dividerHeight="@dimen/split_line"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:listSelector="@color/no_color"
            android:smoothScrollbar="true" />
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>
